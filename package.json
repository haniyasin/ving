{
    "name": "ving",
    "description": "An opinionated web services starter for Nuxt3 that provides REST and per-field privileges out of the box.",
    "private": true,
    "type": "commonjs",
    "scripts": {
        "build": "nuxt build",
        "dev": "nuxt dev",
        "generate": "nuxt generate",
        "preview": "nuxt preview",
        "postinstall": "nuxt prepare",
        "db:build": "prisma generate",
        "db:studio": "prisma studio",
        "test": "vitest",
        "build:schema-generator": "tsc prisma/ving-schema-generator.ts",
        "prepare-migration-datasource": "esbuild typeorm/data-source.ts --external:'mysql' --platform=node --bundle --log-level=warning --outfile=.output/typeorm/data-source.js",
        "generate-migration": "npm run prepare-migration-datasource && typeorm migration:generate -o -p -d .output/typeorm/data-source.js typeorm/migrations/$npm_config_name",
        "run-migrations": "npm run prepare-migration-datasource && typeorm migration:run -d .output/typeorm/data-source.js",
        "revert-migration": "npm run prepare-migration-datasource && typeorm migration:revert -d .output/typeorm/data-source.js",
        "drizzle:gen": "drizzle-kit generate:mysql --out ./drizzle/migrations --schema drizzle/schema",
        "drizzle:migrate": "esbuild drizzle/migrate.ts --platform=node --bundle --log-level=warning --outfile=.output/drizzle/migrate.js && node .output/drizzle/migrate.js"
    },
    "devDependencies": {
        "@nuxt/test-utils": "^3.2.2",
        "@types/bcryptjs": "^2.4.2",
        "@types/lodash": "^4.14.191",
        "@types/luxon": "^3.2.0",
        "@types/uuid": "^9.0.1",
        "drizzle-kit": "^0.17.0",
        "nuxt": "^3.2.2",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5",
        "vitest": "^0.28.5"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^6.3.0",
        "@fortawesome/free-brands-svg-icons": "^6.3.0",
        "@fortawesome/free-regular-svg-icons": "^6.3.0",
        "@fortawesome/free-solid-svg-icons": "^6.3.0",
        "@fortawesome/pro-duotone-svg-icons": "^6.3.0",
        "@fortawesome/pro-light-svg-icons": "^6.3.0",
        "@fortawesome/pro-regular-svg-icons": "^6.3.0",
        "@fortawesome/pro-solid-svg-icons": "^6.3.0",
        "@fortawesome/pro-thin-svg-icons": "^6.3.0",
        "@fortawesome/sharp-regular-svg-icons": "^6.3.0",
        "@fortawesome/sharp-solid-svg-icons": "^6.3.0",
        "@fortawesome/vue-fontawesome": "^3.0.3",
        "@keyv/redis": "^2.5.5",
        "@pinia/nuxt": "^0.4.7",
        "bcrypt": "^5.1.0",
        "bcryptjs": "^2.4.3",
        "csv-parse": "^5.3.5",
        "drizzle-orm": "^0.21.1",
        "keyv": "^4.5.2",
        "lodash": "^4.17.21",
        "luxon": "^3.2.1",
        "mysql2": "^3.2.0",
        "pinia": "^2.0.32",
        "primeflex": "^3.3.0",
        "primeicons": "^6.0.1",
        "primevue": "^3.23.0",
        "uuid": "^9.0.0",
        "zod": "^3.21.4"
    },
    "mikro-orm": {
        "useTsNode": true,
        "configPaths": [
            "./mikro-orm/config.ts"
        ]
    }
}